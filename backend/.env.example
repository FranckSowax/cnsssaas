# ============================================
# CNSS WhatsApp Marketing SaaS - Configuration
# ============================================

# Environment
NODE_ENV=development
PORT=3000

# Database (PostgreSQL avec Supabase)
# Format: postgresql://user:password@host:port/database
DATABASE_URL=postgresql://postgres:password@localhost:5432/cnss_whatsapp

# Supabase Configuration (pour RAG)
SUPABASE_URL=https://votre-projet.supabase.co
SUPABASE_SERVICE_KEY=votre_service_key_supabase
SUPABASE_ANON_KEY=votre_anon_key

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=7d

# Redis (for queues and caching)
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379

# WhatsApp Cloud API Configuration
WHATSAPP_PHONE_NUMBER_ID=your-phone-number-id
WHATSAPP_ACCESS_TOKEN=your-access-token
WHATSAPP_VERIFY_TOKEN=your-verify-token
WHATSAPP_APP_SECRET=your-app-secret
WHATSAPP_BUSINESS_ACCOUNT_ID=your-waba-id

# OpenAI API (for RAG service)
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4

# RAG Configuration
CHUNK_SIZE=1000
CHUNK_OVERLAP=200
TOP_K=5
SIMILARITY_THRESHOLD=0.75

# RAG Service URL
RAG_SERVICE_URL=http://localhost:8000

# Client URL (for CORS)
CLIENT_URL=http://localhost:5173

# File Upload
UPLOAD_MAX_SIZE=10485760  # 10MB
UPLOAD_PATH=./uploads

# Logging
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=1000

# Campaign Settings
CAMPAIGN_BATCH_SIZE=100
CAMPAIGN_RATE_LIMIT=80  # messages per second
